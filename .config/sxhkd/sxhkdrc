super + r
	$BROWSER $HOME/personal/readlater

super + {_,shift+} m
	{dmenumount, dmenuumount}

super + shift + w
	$BROWSER

super + w; {o,O}
	{dmenu-bookmarks,dmenu-snippets}

super + w; {s,S}
	{bookmarkit,snipit}

super + {_,shift} + p
    {passmenu,displayselect}

super + {_,shift+} d
	{dmenu_run , dmenuhandler "$(xclip -sel c -o)" }

super + grave
    dmenuunicode

super + v
	clipmenu -i

super + shift + v
    mpv --ytdl-format=19 "$(xclip -sel c -o)" || mpv --ytdl-format=22 "$(xclip -sel c -o)"

super +t; super + t
	transs P

super +t; t
	transs C

super + t; {a, e, p}
	$TERMINAL -e {transs ar,transs en,transs pr}

super + shift + a
    anki

super + f
	$TERMINAL -e lf

super + shift + e
	$TERMINAL -e bicon -e neomutt

super + n
	$TERMINAL -e bicon -e mynewsboat


super + shift + n
	$TERMINAL -e bicon -e ncmpcpp

{_,shift+} Print; {f, s, w}
	mymaim { ,-c} {-f,-s,-w}

Print; S
	flameshot gui

Print; r
	dmenurecord kill || dmenurecord

XF86Audio{Mute,LowerVolume,RaiseVolume}
	volume {-t,-d 5,-i 5}

super + {shift+minus,minus,equal}
	volume {-t,-d 5,-i 5}

{_,super+ } XF86MonBrightness{Down,Up}
	brightnessctl set {10%-, 1%, +10%, 100%}

super + {_,shift+ }{bracketleft,bracketright}
	brightnessctl {set 5%-,set 1%, set +5%, set 100%}

super + {_, shift+} F1
	{mykd,mykd -s}

super + {_, shift+ } F2
	redshift {-O 5000,-x}

super + {_, shift+ } F3
	{$TERMINAL -e torwrap, td-toggle}

super + {_, shift+ }F4
	remaps; touchpad_toggle {off,on}

super + alt + F4
	setxkbmap -model pc105 -layout us -option '' && notify-send -t 1000 "Setxkbmap" "Has been reset"

super + {_, shift+ }{F10,F12}
	mpc {seek -1%, prev,  seek +1%, next}

super + {_, shift+ } F11
	{mpc toggle, pauseallmpv}

super + F9
	mpc repeat&& mpc single && notify-send -u low -t 1000 "MPD" "$(mpc status 'Single Repeat: %repeat%')"

super + i
	nmcli device wifi rescan

# less used keybinds
super + o; {w,v}
	{forecast,$TERMINAL -e pulsemixer}

super + o; m
    ytmpc "$(xclip -sel c -o)"

super + o; g
	nsxiv -N pdfgallery -t ~/.cache/pdfgallery/*.jpg

super + {_,shift+,alt} BackSpace
	dunstctl {close-all,history-pop,set-paused toggle && notify-send "Dunst" "Is-paused: $(dunstctl is-paused)" }

super + ctrl + x
	xkill

super + shift + q
	sysact

super + q
	physlock -s

super + ctrl + q
	loginctl suspend
