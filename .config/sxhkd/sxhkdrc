super + Return
    $TERMINAL
    #xdo activate -dn Term || tabbed -n Term -r 2 $TERMINAL -w ''

super + i
    xdo activate -N Tmux || $TERMINAL -c Tmux -e sh -c 'tmux a || tmux'

super + shift + i
    xdo activate -dN Emacs || emacsclient -c -e '(my/set-arabic-font)'

super + y
    fol mycli mycli -u root

super + r
    $BROWSER ${XDG_DOCUMENTS_DIR}/readlater


super + o; l
    emacsclient -c -e '(leetcode)'

super + o; h
    fol htop

super + o; {m,u}
    {dmenumount, dmenuumount}

super + shift + w
    fol g $BROWSER

super +  w; {o,O,s,S}
    {dmenu-bookmarks,dmenu-snippets,bookmarkit,snipit}

super + {_,shift+} {d,p}
    {dmenu_run , dmenuunicode, passmenu, displayselect}

super + v
    clipmenu -i

super + shift + v
    fol pulsemixer

super + t; {super + t, t}
    transs {P,C}

super + t; {a, e, p}
    fol {Transa transs a,Transe transs e,Transf transs p}

super + t; {s,S}
    {fol sdcv,$TERMINAL -e sdcv $(xclip -o)}

super + f
    xdo activate -dN lfub || $TERMINAL -c lfub -e lfub

super + a
    xdo activate -N agenda || $TERMINAL -c todo -e emacsclient -nw -e '(my/set-arabic-font)' -e '(my/agenda)'
#super + o; a
    #xdo activate -N agenda || $TERMINAL -c agenda -g 40x20 -e emacsclient -nw -e '(org-agenda-list)' -e '(delete-other-windows)'
super + shift + a
    $TERMINAL -e anki

super + e
    fol neomutt bicon -e neomutt

super + n
    xdo activate -N newsboat || $TERMINAL -g 80x30 -c newsboat -f Dejavu\ Sans\ Mono:pixelsize=18 -e bicon -e newsboat


super + shift + n
    fol ncmpcpp bicon -e ncmpcpp

{_,shift+} Print; {a, s, w}
    mymaim { ,c}{a,s,w}

Print; S
    flameshot gui

Print; r
    kill -15 "$(cat /tmp/recordingpid)" && rm -f /tmp/recordingpid || dmenurecord

XF86Audio{LowerVolume,RaiseVolume}
    wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%{-,+}

{XF86AudioMute, super+shift+minus}
    wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle

super + { minus, equal}
    wpctl set-volume @DEFAULT_AUDIO_SINK@ {5%-, 5%+}

{_,super+ } XF86MonBrightness{Down,Up}
	brightnessctl set {10%-, 1%, +10%, 100%}

super + {_,shift+ }{comma,period}
	brightnessctl {set 5%-,set 1%, set +5%, set 100%}

super + {_, shift+ }F1
    {kdeconnect-indicator ; kdeconnect-cli --refresh, killall kdeconnect-indicator; sleep 1&& killall kdeconnectd }

super + {_, shift+ }F2
    redshift {-O 5000,-x}

super + {_, shift+ }F3
    {fol torwrap, td-toggle}

super + {_, shift+ }F4
    remaps; touchpad_toggle {off,on}

super + alt + F4
    setxkbmap -model pc105 -layout us -option '' && notify-send "Setxkbmap" "Has been reset"

super + {_, shift+ }{F10,F12}
    mpc {seek -1%, prev,  seek +1%, next}

super + F9
    mpc repeat&& mpc single && notify-send -u low -t 3000 "MPD" "$(mpc status 'Single Repeat: %repeat%')"

super + {_, shift+ }F11
    {mpc toggle, pauseallmpv}

# less used keybinds
super + o; {f,w,W,c,n,v}
    {forecast,$TERMINAL -e nmtui,$TERMINAL -g 80x35 -e sh -c 'vnstat| less',xdo activate -N bc || $TERMINAL -g 30x20 -c bc -e bc -lq,newword, mpv --ytdl-format=19 "$(xclip -sel c -o)" || mpv --ytdl-format=22 "$(xclip -sel c -o)" }

super + o; e
    emacsclient -c -e '(my/set-arabic-font)' -e '(my/english-reading-notes-open)'& file=$(find $(echo /media/documents/now/Oxford-Bookworm-Library) -type f -name '*pdf' | sort | dmenu -i -l 10) && zathura "$file"& $TERMINAL -e lf "$(dirname $file)"

super + o; g
    sxiv -N pdfgallery -t ~/.cache/pdfgallery/*.jpg

super + {_,shift+,alt} BackSpace
    dunstctl {close-all,history-pop,set-paused toggle && notify-send "Dunst" "Is-paused: $(dunstctl is-paused)" }

super + shift + Up
    xwallpaper --clear; picom

super + shift + {Right,Left}
    dpselector {1,2}

super + ctrl + x
    xkill

super + shift + q
	sysact

super + z
    physlock -s

super + shift + z
	loginctl suspend

super + Home
    $TERMINAL -e soynet open

super + End
    soynet close

# For some reason sxhkd hangs when opening vim and then pressing super+shift+r
# So keep it shift + r instead of ctrl+r
super + shift + r
	pkill -USR1 -x sxhkd; i3-msg reload
