super + Return
    $TERMINAL

super + i
    fol tmux "sh -c 'tmux a || tmux'"

super + shift + i
    fol C Emacs "emacsclient -c -a 'emacs'"

super + {_,shift+} b
    {fol g $BROWSER,dmenusnippet}

# less used bindings
super + o; {w,n,z,c}
    {weather-report show, $TERMINAL -e nmtui,fol g Zathura zathura, fol c bc "$TERMINAL -geometry 30x20 -name bc -e bc -lq"}


super + {_,shift+} {d,p}
    {dmenu_run, dmenuunicode -i, passmenu, displayselect}

super + { m, shift + m}
    {dmenumount, dmenuumount}

super + {_,shift+} Insert
    {dmenu-bookmarks, bookmarkit}

super + v
    clipmenu

super + shift + v
    fol pulsemixer

super + t; {p, c, a, e, f}
    transs {p,c,a,e,f}

super + t; d
    fol sdcv

super + f
    fol lfub

super + Escape
    fol c pad "$TERMINAL -geometry 40x20 -name pad -e $EDITOR $HOME/.cache/pad.md"

super + e
    fol neomutt "bicon -e neomutt"

super + n
    fol newsboat " bicon -e newsboat"

super + shift + n
    fol ncmpcpp

{_,shift+} Print; {f, s, w}
    mymaim { ,c}{f,s,w}

Print; r
    kill -15 "$(cat /tmp/recordingpid)" && rm -f /tmp/recordingpid || dmenurecord -i

XF86Audio{LowerVolume,RaiseVolume}
    wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%{-,+}

{XF86AudioMute, super+shift+minus}
    wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle

super + { minus, equal}
    wpctl set-volume @DEFAULT_AUDIO_SINK@ {5%-, 5%+}

{_,super+ } XF86MonBrightness{Down,Up}
	brightnessctl set {10%-, 1%, +10%, 100%}

super + {_,shift+ }{comma,period}
	brightnessctl {set 5%-,set 1%, set +5%, set 100%}

super + {_, shift + } F1
    {kdeconnect-indicator ; kdeconnect-cli --refresh, pkill kdeconnect}

super + {_, shift + } F2
    redshift {-O 5000, -x}

super + {_, shift +} F3
    {fol torwrap, td-toggle}

super + {_, shift+} F4
    { remaps && notify-send -t 1000 'Keyboard layout' 'Has been reset to defaults', remaps && xinput set-prop "ETPS/2 Elantech Touchpad" "Device Enabled" 0 & notify-send -t 1000 'Touchpad Has been disabled'}

super + {_, shift+}{F10, F12}
    mpc {seek -1%, prev,  seek +1%, next}

super + {_, shift+} F11
    {mpc toggle, pauseallmpv}

super + {_,shift+} q
	{physlock -s, sysact}

super + ctrl + x
    xkill

super + ctrl + r
	pkill -USR1 -x sxhkd&& echo 'awesome.restart()' | awesome-client
