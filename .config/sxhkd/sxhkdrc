super + Return
    $TERMINAL

super + i
    xdo activate -dn tmux || $TERMINAL -n tmux -e sh -c 'tmux a || tmux'

super + shift + i
    fol C Emacs emacs

super + {_,shift+} b
    {fol g $BROWSER,dmenusnippet}

# less used bindings
super + o; {w,N,z,c,n}
    {weather-report, $TERMINAL -e nmtui,fol g Zathura zathura, fol C bc "$TERMINAL -g 30x20 -n bc -e bc -lq",newword}


super + {_,shift+} {d,p}
    {dmenu_run, dmenuunicode -i, passmenu, displayselect}

super + { m, shift + m}
    {dmenumount, dmenuumount}

super + {_,shift+} Insert
    {dmenu-bookmarks, bookmarkit}

super + v
    clipmenu

super + shift + v
    fol pulsemixer

super + t; {p, c, a, e, f}
    transs {p,c,a,e,f}

super + t; {s,S}
    {fol sdcv,$TERMINAL -e sdcv $(xclip -o)}

super + f
    fol lfub

super + Escape
    fol c pad "$TERMINAL -g 40x20 -n pad -e $EDITOR $HOME/.cache/pad.md"

super + e
    fol neomutt bicon -e neomutt

super + n
    fol newsboat bicon -e newsboat

super + shift + n
    fol ncmpcpp

{_,shift+} Print; {f, s, w}
    mymaim { ,c}{f,s,w}

Print; r
    kill -15 "$(cat /tmp/recordingpid)" && rm -f /tmp/recordingpid || dmenurecord -i

#XF86Audio{LowerVolume,RaiseVolume}
#    wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%{-,+}
#
#{XF86AudioMute, super+shift+minus}
#    wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle
#
#super + { minus, equal}
#    wpctl set-volume @DEFAULT_AUDIO_SINK@ {5%-, 5%+}

{_,super+ } XF86MonBrightness{Down,Up}
	brightnessctl set {10%-, 1%, +10%, 100%}

super + {_,shift+ }{comma,period}
	brightnessctl {set 5%-,set 1%, set +5%, set 100%}

super + {_, shift+ }F1
    {kdeconnect-indicator ; kdeconnect-cli --refresh, pkill kdeconnect}

super + {_, shift+ }F2
    redshift {-O 5000,-x}

super + {_, shift+ }F3
    {fol torwrap, td-toggle}

super + {_, shift+ }F4
    remaps && xinput set-prop "ETPS/2 Elantech Touchpad" "Device Enabled" {1 && notify-send -t 2000 'Touchpad' 'enabled',0 && notify-send -2000 'Touchpad' 'disabled'}

super + {_, shift+ }{F10,F12}
    mpc {seek -1%, prev,  seek +1%, next}

super + {_, shift+ }F11
    {mpc toggle, pauseallmpv}

super + {_,shift+} q
	{physlock -s, sysact}

super + ctrl + x
    xkill

super + ctrl + r
	pkill -USR1 -x sxhkd&& echo 'awesome.restart()' | awesome-client
