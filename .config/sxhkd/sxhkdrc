super + Return
    $TERMINAL

super + i
    xdo activate -N Tmux || $TERMINAL -n Tmux -e sh -c 'tmux a || tmux'

super + shift + i
    xdo activate -d -N Emacs || emacsclient -c -a 'emacs' # -d with xdo, so it works with emacs daemon as well

super + {_,shift+} b
    {fol $BROWSER $BROWSER 0,dmenusnippet}

super + shift + w
    weather-report show

super + {_,shift+} {d,p}
    {dmenu_run, dmenuunicode -i, passmenu, displayselect}

super + { m, shift + m}
    {dmenumount, dmenuumount}

super + {_,shift+} Insert
    {dmenu-bookmarks, bookmarkit}

super + v
    clipmenu

super + shift + v
    fol Pulsemixer pulsemixer 1

super + {_,shift+ } BackSpace
    fol {Sdcv sdcv ,Transs transs} 1

super + {_,shift+} slash
    {transs p, transs c}

super + e
    fol Lfub lfub 1

super + Escape
    fol Pad "$EDITOR $HOME/.cache/pad.md" 1

super + shift + e
    fol Neomutt "bicon -e neomutt" 1

super + n
    fol Newsboat " bicon -e newsboat" 1

super + shift + n
    fol Ncmpcpp ncmpcpp 1

{_,shift+} Print; {f, s, w}
    mymaim { ,c}{f,s,w}

{super + Print, super + Delete}
    {dmenurecord -i, dmenurecord kill}

XF86Audio{RaiseVolume,LowerVolume}
    wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%{-,+}

{XF86AudioMute, super+shift+minus}
    wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle

super + { minus, equal}
    wpctl set-volume @DEFAULT_AUDIO_SINK@ {5%-, 5%+}

{_,super+ } XF86MonBrightness{Down,Up}
	brightnessctl set {10%-, 1%, +10%, 100%}

super + {_,shift+ }{comma,period}
	brightnessctl {set 5%-,set 1%, set +5%, set 100%}

super + {_, shift + } F1
    {kdeconnect-indicator ; kdeconnect-cli --refresh, pkill kdeconnect}

super + {_, shift + } F2
    redshift {-O 5000, -x}

super + {_, shift +} F3
    {torwrap, td-toggle}

super + {_, shift+} F4
    { remaps && notify-send -t 1000 'Keyboard layout' 'Has been reset to defaults', remaps && xinput set-prop "ETPS/2 Elantech Touchpad" "Device Enabled" 0 & notify-send -t 1000 'Touchpad Has been disabled'}

super + {_, shift+}{F10, F12}
    mpc {seek -1%, prev,  seek +1%, next}

super + {_, shift+} F11
    {mpc toggle, pauseallmpv}

super + {_,shift+} q
	{physlock -s, sysact}

super + ctrl + x
    xkill

super + shift + r
	pkill -USR1 -x sxhkd && notify-send -t 1000 'Sxhkd Config reloaded'
