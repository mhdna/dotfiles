#!/bin/sh

xrdb ${XDG_CONFIG_HOME:-$HOME/.config}/x/xresources & xrdbpid=$!
remaps&
xautolock -time 12 -locker 'physlock' -detectsleep &
! pidof redshift && redshift -l 31.77:35.23&
! pidof emacs && emacs --daemon&
eval $TRANSMISSION_DAEMON&

autostart="mpd clipmenud sxhkd picom dunst remapd pipewire"

for program in $autostart; do
	pidof -xs "$program" || "$program" &
done >/dev/null 2>&1

# Ensure that xrdb has finished running before moving on to start the WM/DE.
[ -n "$xrdbpid" ] && wait "$xrdbpid"

exec openbox-session
