#!/bin/sh

[ -x "$(command -v nvim)" ] && alias vim="nvim" vimdiff="nvim -d"

# Use $XINITRC variable if file exists.
[ -f "$XINITRC" ] && alias startx="startx $XINITRC"

# sudo not required for some system commands
for command in mount umount updatedb su ; do
	alias $command="sudo $command"
done; unset command

alias config='/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME'

urlencode () {
    declare str="$*"
    declare encoded=""
    declare i c x
    for ((i = 0; i<${#str}; i++)); do
        c=${str:$i:1}
        case "$c" in
            [-_.~~a-zA-Z0-9] ) x="$c" ;;
            * ) printf -v x '%%%02x' "'c$" ;;
        esac
        encoded+="$x"
    done
    echo "$encoded"
}

duck () {
    declare url=$(urlencode "$*")
    lynx  "https://duckduckgo.com/lite?q=$url"
}

yta () {
    yt-dlp --remux-video ogg -f bestaudio/best --write-thumbnail  --convert-thumbnails jpg --external-downloader aria2c -P "$(cat ${XDG_CONFIG_HOME:-$HOME/.config}/shell/all-dirs | grep -Ei "(/tmp/|music)" | fzf)" $@
}

yt () {
    yt-dlp -S "res:720,fps" --external-downloader aria2c --write-thumbnail  --convert-thumbnails jpg --add-metadata -ic -P "$(cat ${XDG_CONFIG_HOME:-$HOME/.config}/shell/all-dirs | grep -Ei "(/tmp/|vid)" | fzf)" $@
}

Yt () {
    yt-dlp --external-downloader aria2c --add-metadata -ic -P "$(cat ${XDG_CONFIG_HOME:-$HOME/.config}/shell/all-dirs | fzf)" $@
}

configa(){
    while true; do

    get_unstaged_file(){
        # only show unstaged files
        # "^M" are added, "^MM" are added but have modifications to be added, while "^ M are not added"
        unstaged_file="$HOME/$(config status --porcelain | grep -E "(^ M|^MM)" | awk '{print $2}' | fzf )"
    }

    get_unstaged_file || return 1

    config diff "$unstaged_file" &&
    config add "$unstaged_file" &&
    config status &&
    echo "

Type your commit message

Or Press 'q' to leave
         'a' to add other files"
    read -r ans

    if [ $ans = "a" ]; then
       continue
    elif [ $ans = "q" ]; then
        break
    else
       config commit -m "$ans" && break
    fi
    done
}

alias \
    g='git' \
    dr="dragon-drop" \
    p="pacman" \
    P="sudo pacman" \
    ll="ls -l --color=auto" \
    lsd="find . -maxdepth 1 -type d" \
    emacsc="emacsclient  -c -a 'emacs'" \
    abook="abook -C $XDG_CONFIG_HOME/abook/abookrc --datafile $XDG_CONFIG_HOME/abook/addressbook" \
    cp="cp -iv" \
    mv="mv -iv" \
    rm="rm -vI" \
    bc="bc -lq" \
    mkd="mkdir -pv" \
    ref="shortcuts >/dev/null; source $XDG_CONFIG_HOME/shell/shortcutrc" \
    aria2c="aria2c --auto-file-renaming=false" \
    ffmpeg="ffmpeg -hide_banner" \
    ls="ls -hN --color=auto --group-directories-first" \
    grep="grep --color=auto" \
    diff="diff --color=auto" \
    ip="ip -color=auto" \
    nf="notify-send " \
    ka="killall" \
    trem="transmission-remote" \
    z="zathura" \
    c="countdown" \
