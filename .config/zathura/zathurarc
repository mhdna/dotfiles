set adjust-open "best-fit"

#set zoom-min 10

set sandbox none
set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 1
set selection-clipboard clipboard
map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map K zoom in
map J zoom out
map i recolor
map p print
map g goto top

# unmap q

# set scroll-step 70

map b toggle_statusbar
map <C-n> navigate next
map <C-p> navigate previous
map <Space> navigate next
map <S-Space> navigate previous

set font                        "Mono 10"
set default-bg                  "#808080"

# set recolor                     "true"
set recolor-keephue             true      # keep original colors when recoloring

set guioptions none
#set render-loading              true

map Y feedkeys ":exec sh -c \"echo $FILE | xclip -i -sel clip\"<Return>"
