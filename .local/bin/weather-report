#!/bin/sh

weatherreport="${XDG_CACHE_HOME:-$HOME/.cache}/weatherreport"
getforecast() { curl -sf "wttr.in/$LOCATION" > "$weatherreport" && sb-moonphase >> "$weatherreport" || exit 1 ;}

[ -s "$weatherreport" ] && [ "$(stat -c %y "$weatherreport" 2>/dev/null | cut -d' ' -f1)" = "$(date '+%Y-%m-%d')" ] ||
	getforecast

$TERMINAL -e less $weatherreport
