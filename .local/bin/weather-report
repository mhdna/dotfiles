#!/bin/sh

weatherreport="${XDG_CACHE_HOME:-$HOME/.cache}/weatherreport"
getforecast() { curl -sf "wttr.in/$LOCATION" > "$weatherreport" && curl -sf "wttr.in/?format=%m" >> "$weatherreport" || exit 1 ;}

[ -s "$weatherreport" ] && [ "$(stat -c %y "$weatherreport" 2>/dev/null | cut -d' ' -f1)" = "$(date '+%Y-%m-%d')" ] ||
	getforecast

[ "$1" = "show" ] && $TERMINAL -e less $weatherreport
[ "$1" = "get" ] && getforecast
