#!/bin/sh

case "$(printf "Sleep on lid close\nDo not sleep on lid close" | dmenu -i )" in
    'Sleep on lid close') sudo sh -c 'sed -i "s/^HandleLidSwitch=ignore/#HandleLidSwitch=suspend/" /etc/systemd/logind.conf;  systemctl kill -s HUP systemd-logind' ;;
    'Do not sleep on lid close') sudo sh -c 'sed -i "s/^#HandleLidSwitch=suspend/HandleLidSwitch=ignore/" /etc/systemd/logind.conf; systemctl kill -s HUP systemd-logind' ;;
	*) exit 1 ;;
esac
