#!/bin/sh

pidof -x sb-mpdup >/dev/null 2>&1 || setsid -f sb-mpdup >/dev/null 2>&1 &

print(){
    status=$(mpc status %state%)
    if [ $status = "playing" ]; then
        color="#00ff00"
    else
        color="#ff0000"
    fi
    echo "<span color=\"$color\">M: $status</span>"
}

case $BLOCK_BUTTON in
	3) mpc toggle >/dev/null 2>&1 ;;
    *) print ;;
esac
