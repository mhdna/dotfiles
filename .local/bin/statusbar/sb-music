#!/bin/sh

print(){
    status=$(mpc status %state%)
    if [ $status = "playing" ]; then
        color="#00ff00"
    else
        color="#ff0000"
    fi
    echo "<span color=\"$color\">M: $status</span>"
}

# print at startup instead of wating for mpc idle to update
print

while : ; do
	mpc idle >/dev/null && print || break
done
