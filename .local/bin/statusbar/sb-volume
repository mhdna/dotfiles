#!/bin/sh


# [ $(pamixer --get-mute) = true ] && echo "Muted" && exit

# vol="$(pamixer --get-volume)"

# echo "VOL-$vol%"

vol="$(wpctl get-volume @DEFAULT_AUDIO_SINK@)"

if [ "$vol" != "${vol%\[MUTED\]}" ]; then
    echo MUTED
else
    vol="${vol#Volume: }"
    split() {
        # For ommiting the . without calling and external program.
        IFS=$2
        set -- $1
        printf '%s' "$@"
    }
    vol="$(split "$vol" ".")"
    vol="${vol##0}"

    echo "VOL-$vol%"
fi
