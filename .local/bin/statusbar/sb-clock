#!/bin/sh

case $BLOCK_BUTTON in
	3) notify-send "This Month" "$(cal --color=always | sed "s/..7m/<b><span color=\"red\">/;s|..27m|</span></b>|")" && notify-send "Appointments" "$(calcurse -d3)" ;;
	# 2) setsid -f "$TERMINAL" -e calcurse ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

clock=$(date '+%I')

date "+%a %Y-%m-%d %H:%M:%S"
