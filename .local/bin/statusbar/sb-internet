#!/bin/sh

if grep -xq 'up' /sys/class/net/w*/operstate 2>/dev/null ; then
    wifiicon="$(awk '/^\s*w/ { print "W-",int($3 * 100 / 70) "% " }' /proc/net/wireless)"
elif grep -xq 'down' /sys/class/net/w*/operstate 2>/dev/null ; then
    grep -xq '0x1003' /sys/class/net/w*/flags && wifiicon="W-NoConnection " || wifiicon="down "
fi

printf "%s%s%s\n" "$wifiicon" " E-$(cat /sys/class/net/e*/operstate 2>/dev/null)" "$(sed "s/.*/ðŸ”’/" /sys/class/net/tun*/operstate 2>/dev/null)"
