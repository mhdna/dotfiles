#!/bin/sh

case $BLOCK_BUTTON in
    3) setsid -f "$TERMINAL" -e nmtui ;;
    6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

if grep -xq 'up' /sys/class/net/w*/operstate 2>/dev/null ; then
    wifiicon="$(awk '/^\s*w/ { print int($3 * 100 / 70) "% " }' /proc/net/wireless)"
elif grep -xq 'down' /sys/class/net/w*/operstate 2>/dev/null ; then
    grep -xq '0x1003' /sys/class/net/w*/flags && wifiicon="NC " || wifiicon="down "
fi

printf "%s%s%s\n" "W: $wifiicon" "E: $(cat /sys/class/net/e*/operstate 2>/dev/null)" "$(sed "s/.*/ðŸ”’/" /sys/class/net/tun*/operstate 2>/dev/null)"
