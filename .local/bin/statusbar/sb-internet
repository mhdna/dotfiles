#!/bin/sh

 # Show wifi ğŸ“¶ and percent strength or ğŸ“¡ if none.
 # Show ğŸŒ if connected to ethernet or â if none.
 # Show ğŸ”’ if a vpn connection is active

 case $BLOCK_BUTTON in
 	1) "$TERMINAL" -e nmtui; pkill -RTMIN+4 dwmblocks ;;
 # 	3) notify-send "ğŸŒ Internet module" "\- Click to connect
 # âŒ: wifi disabled
 # ğŸ“¡: no wifi connection
 # ğŸ“¶: wifi connection with quality
 # â: no ethernet
 # ğŸŒ: ethernet working
 # ğŸ”’: vpn is active
 # " ;;
 	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
 esac

 # For getting SSID
if=wlan0
    while IFS=$': \t' read -r label value
    do
        case $label in SSID) SSID=$value
            ;;
        signal) SIGNAL=$value
            ;;
    esac
done < <(iw "$if" link)

 if grep -xq 'up' /sys/class/net/w*/operstate 2>/dev/null ; then
 	wifiicon="$(awk '/^\s*w/ { print "W-",int($3 * 100 / 70) "% " }' /proc/net/wireless)"
 elif grep -xq 'down' /sys/class/net/w*/operstate 2>/dev/null ; then
 	grep -xq '0x1003' /sys/class/net/w*/flags && wifiicon="W-NoConnection " || wifiicon="OFF "
 fi

 printf "%s%s%s\n" "$wifiicon$SSID" " $(sed "s/down/E-DOWN/;s/up/E-UP/" /sys/class/net/e*/operstate 2>/dev/null)" "$(sed "s/.*/ğŸ”’/" /sys/class/net/tun*/operstate 2>/dev/null)"

# ip=$(ip route get 8.8.8.8 2>/dev/null|grep -Eo 'src [0-9.]+'|grep -Eo '[0-9.]+')
