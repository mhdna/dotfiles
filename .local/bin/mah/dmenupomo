#!/bin/sh
    case "$(printf "start\npause\nstop\nclock" | dmenu -i )" in #  -p 'Action:'
    'start') pomo stop && pomo start && notify-send 'ğŸ… started' $(pomo clock) && pomo notify  ;;
    'pause') pomo pause&& notify-send 'ğŸ… paused' $(pomo clock);;
    'stop') pomo stop&& notify-send 'ğŸ… stopped';;
    # 'Play') trans -speak -player mplayer ;;
    'clock') notify-send ğŸ… $(pomo clock);;
	*) exit 1 ;;
esac
