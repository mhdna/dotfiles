#!/bin/sh

# Decrease key repeat delay to 300ms and increase key repeat rate to 50 per second.
xset r rate 300 50

setxkbmap -model pc105 -layout us,ara -option grp:win_space_toggle -option caps:ctrl_modifier,altwin:menu_win

# when it is pressed only once, treat it as escape.
killall xcape 2>/dev/null ; xcape -e 'Caps_Lock=Escape'

echo "Remaps reconfigured"
notify-send -u low 'Remaps' 'Reconfigured'
