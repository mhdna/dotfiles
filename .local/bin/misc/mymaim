#!/bin/sh

tmpdir="/tmp/mymaim_tmp"
mkdir -p "$tmpdir"

output="$tmpdir/$(date '+%y-%m-%d_%H:%M:%S').png"

maimsel="maim -u -s"
maimwin="maim -q -u -d 0.2 -i $(xdotool getactivewindow)"
maimful="maim -q -u -d 0.2"

copy() {
    xclip -sel clip -t image/png
}

copy_name () {
    echo "$output" | tr -d '\n' | xclip -sel c -i
}

copy_success () {
    notify-send -t 1000 "Screenshot has been copied successfully"
}


move(){
    newpath="$(find "$XDG_PICTURES_DIR"/screenshots -maxdepth 1 -type d | dmenu -i -l 5)"
    mv "$output" "$newpath"
}


usage () {
    echo "Usage:
    -t save to /tmp/screenshots instead of $XDG_PICTURES_DIR/screenshots folder
    -s selected area
    -w window
    -f fullscreen
    -c [s, w, f] capture as previous but copy to clipboard instead of saving"
}

while getopts 'cswf' opt; do
    case "$opt" in
    "c") toclipboard=true;;
    "s") if [ "$toclipboard" = true ]; then
            $maimsel | copy && copy_success
        else
            $maimsel "${output}" pic-selected- && move && copy_name
        fi ;;
    "w") if [ "$toclipboard" = true ]; then
        $maimwin| copy && copy_success
        else
            $maimwin "${output}" pic-window- && move && copy_name
        fi;;
    "f") if [ "$toclipboard" = true ]; then
            $maimful | copy && copy_success
        else
            $maimful "${output}" pic-full- && move && copy_name
        fi;;
    # "F")
        # if [ "$toclipboard" = true ]; then
        # freeze c;;
        # freeze && success;;
    *) usage; exit 1 ;;
    esac
done

