#!/bin/sh

tr(){
    if [ "$1" = "arabic" ]; then
        trans --target="$1" --speak
    else
        trans --target="$1"
    fi
}

case "$1" in
    "p")
    notify-send "$(trans --no-bidi -b --target="arabic" "$(xclip -o)")";;
    "c")
    notify-send "$(trans --no-bidi -b --target="arabic" "$(xclip -sel c -o)")";;
    "a") tr "arabic";;
    "e") tr "english";;
    "f") tr "persian";;
    *) exit 1;;
esac
