#!/bin/sh

tr(){
    if [ "$1" = "ar" ]; then
        trans --target="arabic" --speak
    else
        trans ar:"$1"
    fi
}

case "$1" in
    # xclip's primary clipboard
    "P")
    notify-send "$(trans --no-bidi -b --target="arabic" "$(xclip -o)")";;
    # xclip's clipboard clipboard
    "C")
    notify-send "$(trans --no-bidi -b --target="arabic" "$(xclip -sel c -o)")";;
    "a") tr "ar";;
    "e") tr "en";;
    "p") tr "pe";;
    *) exit 1;;
esac
