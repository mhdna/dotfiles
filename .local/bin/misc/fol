#!/bin/sh

case "$1" in
    "g")
    # gui without custom class set
    if [ -z "$3" ]; then
        xdo activate -N "$2" || $2
    # gui with custom class set
    else
        xdo activate -N "$2" || $3
    fi;;
    "c") # custom program with custom name set
        xdo activate -n "$2" || $3;;
    *)
    if [ -z "$2" ]; then
        # tui program without custom name set
        xdo activate -d -n "$1" || $TERMINAL -name "$1" -e "$1"
    else
        # tui program with custom name set
        xdo activate -d -n "$1" || $TERMINAL -name "$1" -e "$2"
    fi;;
esac
