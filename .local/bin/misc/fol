#!/bin/sh


case "$1" in
    "g")
    # gui without custom class set
    if [ -z "$3" ]; then
        xdo activate -N "$2" || $2
    # gui with custom class set
    else
        xdo activate -N "$2" || $3
    fi;;
    "c") # custom program with custom name set
        rest=$(echo "$@" | cut -d ' ' -f3-)
        xdo activate -dn "$2" || $rest;;
    "C") # custom program with custom class set
        xdo activate -dN "$2" || $3;;
    *)
    if [ -z "$2" ]; then
        # tui program without custom name set
        xdo activate -dn "$1" || $TERMINAL -n "$1" -e "$1"
    else
        # tui program with custom name set
        rest=$(echo "$@" | cut -d ' ' -f2-)
        xdo activate -dn "$1" || $TERMINAL -n "$1" -e $rest
    fi;;
esac
