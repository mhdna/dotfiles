#!/bin/sh

help(){
    echo "Usage:
          -t toggle mute
          -i n increase volume by n
          -d n decrease volume by n"
}

case "$1" in
    "-t") wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle ;;
    "-i")  wpctl set-volume @DEFAULT_AUDIO_SINK@ "$2"%+;;
    "-d")  wpctl set-volume @DEFAULT_AUDIO_SINK@ "$2"%-;;
    *) help
esac

pkill -RTMIN+1 ${STATUSBAR:-i3blocks}
