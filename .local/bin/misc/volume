#!/bin/sh

help(){
    echo "Usage:
          -t toggle mute
          -i n increase volume by n
          -d n decrease volume by n"
}

case "$1" in
    "-t") pamixer -t ;;
	"-i") pamixer --allow-boost -i 5 ;;
	"-d") pamixer --allow-boost -d 5 ;;
    *) help
esac

pkill -RTMIN+1 ${STATUSBAR:-dwmblocks}
