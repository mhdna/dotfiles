#!/bin/sh

weatherreport="${XDG_CACHE_HOME:-$HOME/.cache}/weatherreport"

getforecast() {
        curl -sf "wttr.in/$LOCATION" > "$weatherreport" && curl -sf "wttr.in/?format=%m" >> "$weatherreport" || notify-send "Weather report" "Something went wrong..."
}

[ "$1" = "get" ] && getforecast

[ -s "$weatherreport" ] && [ "$(stat -c %y "$weatherreport" 2>/dev/null | cut -d' ' -f1)" = "$(date '+%Y-%m-%d')" ] ||
	getforecast

$TERMINAL -e less "$weatherreport"
