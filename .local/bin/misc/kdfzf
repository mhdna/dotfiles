#!/bin/sh

# Description:
# Send files to a connected kdeconnect device

! pidof kdeconnectd  && setsid -f /usr/lib/kdeconnectd >/dev/null 2>&1 && sleep 2

kdeconnect-cli --refresh

chosen="$(kdeconnect-cli -a | fzf)"
[ -z "$chosen" ] && exit 1 # exit if empty (you can't do *| fzf || exit 1* in the previous row)

id="$(echo "$chosen" | awk '{print $3}')"

kdeconnect-cli --device  "$id" --share "$@" || notify-send 'ðŸ“± Kdeconnect' 'Sending has failed'
